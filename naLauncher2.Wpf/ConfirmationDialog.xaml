<Window x:Class="naLauncher2.Wpf.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        MinWidth="280"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="TextBlock">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3F42"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border Background="#FF282C2E" BorderBrush="#FF404448" BorderThickness="1">
        <StackPanel>
            <TextBlock x:Name="MessageText" Foreground="White" FontSize="14" TextWrapping="Wrap"
                       Margin="24,20,24,20" MaxWidth="400"
                       Cursor="SizeAll" MouseLeftButtonDown="Border_MouseLeftButtonDown"/>
            <Rectangle Height="1" Fill="#FF404448"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Style="{StaticResource ButtonStyle}" Text="Confirm" Foreground="LightSkyBlue" MouseLeftButtonUp="Confirm_Click"/>
                <TextBlock Style="{StaticResource ButtonStyle}" Text="Cancel" MouseLeftButtonUp="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
