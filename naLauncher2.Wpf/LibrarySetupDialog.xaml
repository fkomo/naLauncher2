<Window x:Class="naLauncher2.Wpf.LibrarySetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        MinWidth="280"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <Style x:Key="OptionStyle" TargetType="TextBlock">
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3F42"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border Background="#FF282C2E" BorderBrush="#FF404448" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="naLauncher" Foreground="White" FontSize="24" FontWeight="SemiBold" Margin="24,16,16,16"
                       Cursor="SizeAll" MouseLeftButtonDown="Border_MouseLeftButtonDown"/>
            <TextBlock Style="{StaticResource OptionStyle}" Text="Load Existing Library" MouseLeftButtonUp="LoadOption_Click"/>
            <TextBlock Style="{StaticResource OptionStyle}" Text="Create New Library" MouseLeftButtonUp="CreateOption_Click"/>
            <Rectangle Height="1" Fill="#FF404448" Margin="0,4"/>
            <TextBlock Style="{StaticResource OptionStyle}" Text="Exit" Opacity="0.6" MouseLeftButtonUp="ExitOption_Click"/>
        </StackPanel>
    </Border>
</Window>
